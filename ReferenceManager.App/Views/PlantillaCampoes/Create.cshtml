            <div class="form-group">
                <div class="form-check form-switch">
                    @*<input class="form-check-input" type="checkbox" id="Requerido" name="Requerido" checked>*@
                    @Html.CheckBox("Requerido", new  { @class = "form-check-input", @checked="checked" })
                    <label class="form-check-label" asp-for="Requerido"></label>
                    <span asp-validation-for="Requerido" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
