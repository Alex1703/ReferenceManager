    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PlantillaCampo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FkCampo" class="control-label"></label>
                <select asp-for="FkCampo" class="form-control" asp-items="ViewBag.FkCampo"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkPlantilla" class="control-label"></label>
                <select asp-for="FkPlantilla" class="form-control" asp-items="ViewBag.FkPlantilla"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrdenCampo" class="control-label"></label>
                <input asp-for="OrdenCampo" class="form-control" />
