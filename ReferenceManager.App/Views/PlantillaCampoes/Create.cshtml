            </div>
            <div class="form-group">
                <label asp-for="EtiquetaCampo" class="control-label"></label>
                <input asp-for="EtiquetaCampo" class="form-control" />
                <span asp-validation-for="EtiquetaCampo" class="text-danger"></span>
