                    width: 40%;
                }

        .form-control {
            height: 40px;
        }

        th {
            font-size: 10px;
            text-align: left;
        }

        td {
            font-size: 10px;
            text-align: left;
        }

        table {
            width: 100%;
            margin-top: 5px;
            margin-bottom: 5px;
        }

        table, th, td {
            border: 1px solid black;
            padding: 5px;
            margin: 5px;
        }

        #idDataReferencia label {
            margin: 5px;
        }

        #formSaveComentario > * {
            margin: 5px;
        }

        h6 {
